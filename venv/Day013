#Lists

days = ['Saturday','Sunday','Monday','Tuesday','Wednesday','Thursday','Friday']

print (days)

print (days[3])

print ('days of work ',days[1:6])
print('-----------------------------')

print (days[-1])
print('-----------------------------')

for i in days:
    print(i)


print('-----------------------------')


days[2]='Friday'

print (days)
print('-----------------------------')

del days[2]

print (days)

print('The index has been changed')

print (days[2])
